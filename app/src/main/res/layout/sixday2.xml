<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

        <RelativeLayout
        android:id="@+id/indicator3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">
        <!--星期-->
        <TextView
            android:id="@+id/day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="80dp"
            android:singleLine="true"
            android:text="星期三"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
        <!--天气情况图片-->
        <ImageView
            android:id="@+id/weather_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/day3"
            android:src="@drawable/biz_plugin_weather_qing"/>
        <!--温度范围-->
        <TextView
            android:id="@+id/temperature3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_img3"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="-2~-7"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
        <!--天气状况-->
        <TextView
            android:id="@+id/climate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature3"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="多云转晴"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
        <!--风力信息-->
        <TextView
            android:id="@+id/wind3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/climate3"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="微风"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/indicator4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <!--星期-->
            <TextView
                android:id="@+id/day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="80dp"
                android:singleLine="true"
                android:text="星期三"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
            <!--天气情况图片-->
            <ImageView
                android:id="@+id/weather_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/day4"
                android:src="@drawable/biz_plugin_weather_qing"/>
            <!--温度范围-->
            <TextView
                android:id="@+id/temperature4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weather_img4"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="-2~-7"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
            <!--天气状况-->
            <TextView
                android:id="@+id/climate4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/temperature4"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="多云转晴"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
            <!--风力信息-->
            <TextView
                android:id="@+id/wind4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/climate4"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="微风"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
